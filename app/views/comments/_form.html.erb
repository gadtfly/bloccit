<div class="row">
  <div class="col-md-7">
    <h3> Add a Comment <h3>
    <%= form_for [post, comment]  do |f| %>
     <% if comment.errors.any? %>
        <div class="alert alert-danger">
          <h4>There are <%= pluralize(comment.errors.count, "error") %>Errors.</h4>
          <ul>
            <% comment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_group_tag(comment.errors[:body]) do %>
        <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment" %>
      <% end %>
      <div class="form-group">
        <%= f.submit "Create Comment", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>