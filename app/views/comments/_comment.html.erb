<div class="row">

  <div class="col-md-8">
     <h2>Comments</h2>
    <% comments.each do |comment| %>
      <%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
        <%= link_to '#', class: 'pull-left' do %>
          <%= image_tag(comment.user.avatar.small.rul) if comment.user.avatar? %>
        <% end %>
        <div class="media-body">
            <small>
              <%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago 
             <% if policy(comment).destroy? %>
                <%= link_to "Delete", [@post, comment], method: :delete %>
                <!-- DELETE requeste route [@topic, @post, @comment] aka topic/:topic_id/post/post/:post_id/comments/:id because shallow nesting allows a DELETE request route post/:post_id/comments/:id -->
              <% end %>
            </small>
            <p><%= comment.body %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

